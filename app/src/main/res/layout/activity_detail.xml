<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2F33"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:transitionName="transTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        tools:text="IT Chapter Two" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="10"
        android:progressTint="#F44336"
        android:rating="8.5" />

    <TextView
        android:id="@+id/tvOverview"
        android:transitionName="transOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        tools:text="This is a sample text overview.This is a sample text overview.This is a sample text overview." />

    <com.google.android.youtube.player.YouTubePlayerView
        android:transitionName="transImage"
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
</LinearLayout>